<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imagen Título"
            android:textStyle="bold"
            android:textColor="@color/colorAqua"
            android:textAppearance="?android:textAppearanceLarge"/>
        <View
            android:layout_width="@dimen/alturaimagen"
            android:background="@color/colorPrimary"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atardecer en el paraíso"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorAqua"
            android:layout_marginBottom="@dimen/fab_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imagen Detalles"
            android:textStyle="bold"
            android:textColor="@color/colorAqua"
            android:textAppearance="?android:textAppearanceLarge"/>
        <View
            android:layout_width="@dimen/alturaimagen"
            android:background="@color/colorPrimary"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fotografía tomada durante el anochecer en altamar"
            android:textStyle="bold"
            android:textColor="@color/colorAqua"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginBottom="@dimen/fab_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="URL de la imagen"
            android:textStyle="bold"
            android:textColor="@color/colorAqua"
            android:textAppearance="?android:textAppearanceLarge"/>
        <View
            android:layout_width="@dimen/alturaimagen"
            android:background="@color/colorPrimary"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://2.bp.blogspot.com/-HxOYNqlhQRg/UAdiMM08gsI/AAAAAAABAl0/rCdoRharrvA/s1600/noche-de-luna-en-el-mar-crucero- cruise-mar-abierto-en-la-oscuridad.jpg"
            android:textStyle="bold"
            android:textColor="@color/colorAqua"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginBottom="@dimen/fab_margin"/>

    </LinearLayout>

</ScrollView>